{
  "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
